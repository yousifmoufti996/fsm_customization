<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default Partner Categories -->
        <record id="partner_category_blacklist" model="partner.category">
            <field name="name">Blacklist</field>
            <field name="code">BLACKLIST</field>
            <field name="description">Partners that should be avoided or restricted from certain operations</field>
            <field name="color">1</field>
            <field name="sequence">10</field>
        </record>

        <record id="partner_category_whitelist" model="partner.category">
            <field name="name">Whitelist</field>
            <field name="code">WHITELIST</field>
            <field name="description">Trusted partners with special privileges or priority treatment</field>
            <field name="color">10</field>
            <field name="sequence">20</field>
        </record>

        <record id="partner_category_vip" model="partner.category">
            <field name="name">VIP</field>
            <field name="code">VIP</field>
            <field name="description">Very Important Partners - highest priority customers</field>
            <field name="color">5</field>
            <field name="sequence">30</field>
        </record>

        <record id="partner_category_prospect" model="partner.category">
            <field name="name">Prospect</field>
            <field name="code">PROSPECT</field>
            <field name="description">Potential customers or partners being evaluated</field>
            <field name="color">3</field>
            <field name="sequence">40</field>
        </record>

        <record id="partner_category_vendor" model="partner.category">
            <field name="name">Preferred Vendor</field>
            <field name="code">VENDOR</field>
            <field name="description">Preferred suppliers and vendors</field>
            <field name="color">7</field>
            <field name="sequence">50</field>
        </record>

        <record id="partner_category_inactive" model="partner.category">
            <field name="name">Inactive</field>
            <field name="code">INACTIVE</field>
            <field name="description">Partners that are no longer active but not blacklisted</field>
            <field name="color">8</field>
            <field name="sequence">60</field>
        </record>

    </data>
</odoo>