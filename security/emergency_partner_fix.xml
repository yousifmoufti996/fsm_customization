<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- EMERGENCY: Deactivate problematic base rules and create override -->
        
        <!-- Deactivate any restrictive base partner rules -->
        <record id="base.res_partner_rule_private_partner" model="ir.rule">
            <field name="active" eval="False"/>
        </record>
        
        <!-- Create universal admin access -->
        <record id="emergency_partner_admin_access" model="ir.rule">
            <field name="name">EMERGENCY: Partner Admin Universal Access</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="active" eval="True"/>
        </record>
        
    </data>
</odoo>