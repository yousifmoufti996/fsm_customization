<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Security Groups -->
        <record id="group_fsm_maintenance_supervisor" model="res.groups">
            <field name="name">FSM Maintenance Supervisor</field>
            <field name="category_id" ref="fieldservice.module_category_field_service"/>
            <field name="implied_ids" eval="[(4, ref('fieldservice.group_fsm_manager'))]"/>
        </record>

        <record id="group_fsm_team_leader" model="res.groups">
            <field name="name">FSM Team Leader</field>
            <field name="category_id" ref="fieldservice.module_category_field_service"/>
            <field name="implied_ids" eval="[(4, ref('fieldservice.group_fsm_user'))]"/>
        </record>

        <record id="group_fsm_worker" model="res.groups">
            <field name="name">FSM Worker</field>
            <field name="category_id" ref="fieldservice.module_category_field_service"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Record Rules for different user types -->
        
        <!-- Workers can only see orders assigned to them -->
        <record id="fsm_order_worker_rule" model="ir.rule">
            <field name="name">FSM Order Worker Access</field>
            <field name="model_id" ref="fieldservice.model_fsm_order"/>
            <field name="groups" eval="[(4, ref('group_fsm_worker'))]"/>
            <field name="domain_force">[('worker_id.user_id', '=', user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Team Leaders can see orders where they are team leader -->
        <record id="fsm_order_team_leader_rule" model="ir.rule">
            <field name="name">FSM Order Team Leader Access</field>
            <field name="model_id" ref="fieldservice.model_fsm_order"/>
            <field name="groups" eval="[(4, ref('group_fsm_team_leader'))]"/>
            <field name="domain_force">[('person_id', '=', user.id)]</field>
            <!-- <field name="domain_force">[('team_leader_id', '=', user.id)]</field> -->
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Maintenance Supervisors have full access -->
        <record id="fsm_order_supervisor_rule" model="ir.rule">
            <field name="name">FSM Order Maintenance Supervisor Access</field>
            <field name="model_id" ref="fieldservice.model_fsm_order"/>
            <field name="groups" eval="[(4, ref('group_fsm_maintenance_supervisor'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>