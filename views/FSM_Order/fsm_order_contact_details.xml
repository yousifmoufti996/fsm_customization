<odoo>
  <record id="view_fsm_order_form_contact_details" model="ir.ui.view">
    <field name="name">fsm.order.form.contact.details</field>
    <field name="model">fsm.order</field>
    <field name="inherit_id" ref="fieldservice.fsm_order_form"/>
    <field name="arch" type="xml">

      <!-- Put Contact Details BEFORE the Resolution field -->
    <xpath expr="//group[@name='resolution_grp']" position="before">


        <!-- Full-width block -->
        <separator string="Contact Details" colspan="4"/>
        <group name="contact_details" invisible="customer_id == False" colspan="4">

          <!-- Left column -->
            <!-- <field name="customer_house_number"/> -->
            <!-- <field name="customer_voucher_number"/> -->
            <!-- <field name="customer_vat_number"/> -->
            <!-- <field name="customer_residence_card"/> -->
            <!-- <field name="customer_id_card"/> -->
            <!-- <field name="customer_port_number"/> -->
            <!-- <field name="customer_mother_name_and_surname"/> -->
            <!-- <field name="customer_email"/> -->
            <!-- <field name="customer_contract_number"/> -->
            <!-- <field name="customer_alley_number"/> -->
            <!-- <field name="customer_city"/> -->             
              <!-- <field name="customer_home_number"/> -->
            <group string="معلومات المشترك والاتصال">
              <field name="customer_name"/>
              <field name="customer_phone"/>
              <field name="customer_mobile"/>
              <field name="customer_family_number"/>
          </group>
            <group string=" العنوان">
              <field name="customer_street"/>
              <field name="customer_zip"/>
              <field name="customer_street2"/>
              <field name="customer_local_number"/>
              <field name="customer_pole"/>
          </group>

          <!-- Right Column -->
          <group string="معلومات الاشتراك">
              <field name="customer_status" 
                    widget="badge" 
                    decoration-danger="customer_status == 'expired'" 
                    decoration-success="customer_status != 'expired'"/>
              <field name="customer_user_name"/>
              <field name="customer_category_id" widget="many2many_tags"/>
              <field name="customer_menu_type_ids" widget="many2many_tags"/>          
              <field name="customer_number_of_expired_days"/>
              <field name="customer_total_due"/>
          </group>

        </group>

      </xpath>
    </field>
  </record>
</odoo>
