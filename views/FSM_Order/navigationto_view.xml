<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Add Navigation Button to FSM Order Form -->
        <record id="fsm_order_form_navigation_button" model="ir.ui.view">
            <field name="name">fsm.order.form.navigation</field>
            <field name="model">fsm.order</field>
            <field name="inherit_id" ref="fieldservice.fsm_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_navigate_to" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-location-arrow"
                            invisible=" not location_id or not customer_id ">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Navigate To</span>
                            <span class="o_stat_text">Location</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>