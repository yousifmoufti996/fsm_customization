<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Area Name Views -->
    <record id="area_name_tree_view" model="ir.ui.view">
        <field name="name">area.name.tree</field>
        <field name="model">area.name</field>
        <field name="arch" type="xml">
            <tree string="Area Names">
                <field name="name"/>
                <field name="menu_type_id"/>
            </tree>
        </field>
    </record>

    <record id="area_name_form_view" model="ir.ui.view">
        <field name="name">area.name.form</field>
        <field name="model">area.name</field>
        <field name="arch" type="xml">
            <form string="Area Name">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="menu_type_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="أرقام المنطقة" name="area_numbers">
                            <field name="area_number_ids">
                                <tree editable="bottom">
                                    <field name="name" string="رقم المنطقة"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="area_name_id" invisible="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="مجموعة عملاء فرعية" name="sub_groups">
                            <field name="menu_type_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Area Number Views -->
    <record id="area_number_tree_view" model="ir.ui.view">
        <field name="name">area.number.tree</field>
        <field name="model">area.number</field>
        <field name="arch" type="xml">
            <tree string="Area Numbers">
                <field name="name"/>
                <field name="area_name_id"/>
            </tree>
        </field>
    </record>

    <record id="area_number_form_view" model="ir.ui.view">
        <field name="name">area.number.form</field>
        <field name="model">area.number</field>
        <field name="arch" type="xml">
            <form string="Area Number">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="area_name_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_area_name" model="ir.actions.act_window">
        <field name="name">أسماء المناطق</field>
        <field name="res_model">area.name</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                إنشاء اسم منطقة جديد
            </p>
            <p>
                إضافة وإدارة أسماء المناطق المختلفة في النظام
            </p>
        </field>
    </record>

    <record id="action_area_number" model="ir.actions.act_window">
        <field name="name">أرقام المناطق</field>
        <field name="res_model">area.number</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                إنشاء رقم منطقة جديد
            </p>
            <p>
                إضافة وإدارة أرقام المناطق المختلفة لكل منطقة
            </p>
        </field>
    </record>

    <record id="action_partner_by_area" model="ir.actions.act_window">
        <field name="name">العملاء حسب المنطقة</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_area_name': 1}</field>
        <field name="domain">[('area_name_id', '!=', False)]</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_area_management_root" 
              name="إدارة المناطق" 
              sequence="15" 
              parent="contacts.res_partner_menu_config"
              />
              <!-- web_icon="fa-map-marker"
              parent="menu_area_management_root"  -->
    
    <menuitem id="menu_area_configuration" 
              name="الإعدادات" 
              parent="menu_area_management_root" 
              sequence="10"/>
    
    <menuitem id="menu_area_name" 
              name="أسماء المناطق" 
              parent="menu_area_configuration" 
              action="action_area_name" 
              sequence="1"/>
    
    <menuitem id="menu_area_number" 
              name="أرقام المناطق" 
              parent="menu_area_configuration" 
              action="action_area_number" 
              sequence="2"/>
    
    <menuitem id="menu_area_reports" 
              name="التقارير" 
              parent="menu_area_management_root" 
              sequence="20"/>
    
    <menuitem id="menu_partner_by_area" 
              name="العملاء حسب المنطقة" 
              parent="menu_area_reports" 
              action="action_partner_by_area" 
              sequence="1"/>

</odoo>