<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- FSM Operation Type Views -->
    <record id="view_fsm_operation_type_tree" model="ir.ui.view">
        <field name="name">fsm.operation.type.tree</field>
        <field name="model">fsm.operation.type</field>
        <field name="arch" type="xml">
            <tree string="Operation Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="operation_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_fsm_operation_type_form" model="ir.ui.view">
        <field name="name">fsm.operation.type.form</field>
        <field name="model">fsm.operation.type</field>
        <field name="arch" type="xml">
            <form string="Operation Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="operation_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Operation Types -->
    <record id="action_fsm_operation_type" model="ir.actions.act_window">
        <field name="name">Operation Types</field>
        <field name="res_model">fsm.operation.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Operation Type
            </p>
        </field>
    </record>

    <!-- Menu Item for Operation Types -->
    <menuitem id="menu_fsm_operation_type"
              name="Operation Types"
              parent="fieldservice.config"
              action="action_fsm_operation_type"
              sequence="25"/>

    <!-- Inherit FSM Order Type Form to add Operation Types -->
    <record id="view_fsm_order_type_form_inherit" model="ir.ui.view">
        <field name="name">fsm.order.type.form.inherit</field>
        <field name="model">fsm.order.type</field>
        <field name="inherit_id" ref="fieldservice.fsm_order_type_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <notebook>
                    <page name="operation_types" string="Operation Types">
                        <field name="operation_type_ids">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="active"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <!-- Inherit FSM Order Form to rename "type" to "Operation" and add "Operation Type" -->
    <record id="view_fsm_order_form_operation_inherit" model="ir.ui.view">
        <field name="name">fsm.order.form.operation.inherit</field>
        <field name="model">fsm.order</field>
        <field name="inherit_id" ref="fieldservice.fsm_order_form"/>
        <field name="arch" type="xml">
            <!-- Rename the type field label to "Operation" -->
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="string">Operation</attribute>
            </xpath>
            
            <!-- Add operation_type_id field after type field -->
            <xpath expr="//field[@name='type']" position="after">

                <field name="reason"/>
                <field name="operation_type_id" 
                       invisible="type == False" 
                       required="type != False"/>
            </xpath>
        </field>
    </record>

   

</odoo>