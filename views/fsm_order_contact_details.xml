<odoo>
  <record id="view_fsm_order_form_contact_details" model="ir.ui.view">
    <field name="name">fsm.order.form.contact.details</field>
    <field name="model">fsm.order</field>
    <field name="inherit_id" ref="fieldservice.fsm_order_form"/>
    <field name="arch" type="xml">

      <!-- Put Contact Details BEFORE the Resolution field -->
    <xpath expr="//group[@name='resolution_grp']" position="before">


        <!-- Full-width block -->
        <separator string="Contact Details" colspan="4"/>
        <group name="contact_details" invisible="customer_id == False" colspan="4">

          <!-- Left column -->
          <group>
            <field name="customer_name"/>
            <field name="customer_email"/>
            <field name="customer_phone"/>
            <field name="customer_mobile"/>
            <field name="customer_website"/>
            <field name="customer_company_type"/>
            <field name="customer_is_company"/>
            <field name="customer_function"/>
            <field name="customer_title"/>
            <field name="customer_parent_id"/>
          </group>

          <!-- Right column -->
          <group>
            <field name="customer_street"/>
            <field name="customer_street2"/>
            <field name="customer_city"/>
            <field name="customer_state_id"/>
            <field name="customer_zip"/>
            <field name="customer_country_id"/>
            <field name="customer_vat"/>
            <field name="customer_industry_id"/>
            <field name="customer_lang"/>
            <field name="customer_tz"/>
          </group>

          <!-- Third column (totals/status) -->
          <group>
            <field name="customer_total_due"/>
            <!-- If your field is actually customer_followup_status, use that name -->
            <field name="customer_status"/>
            <field name="customer_number_of_expired_days"/>
          </group>

        </group>

      </xpath>
    </field>
  </record>
</odoo>
