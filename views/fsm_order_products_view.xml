    <record id="product_kanban_fsm_selection" model="ir.ui.view">
        <field name="name">product.product.kanban.fsm.selection</field>
        <field name="model">product.product</field>
         <field name="priority">1</field>
        <field name="arch" type="xml">
            <kanban string="Products" create="true" edit="true">
                <field name="id"/>
                <field name="name"/>
                <field name="default_code"/>
                <field name="list_price"/>
                <field name="is_selected_in_fsm"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" 
                             t-att-style="record.is_selected_in_fsm.raw_value ? 'border: 3px solid #28a745; background-color: #f8fff9;' : ''">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <!-- <button name="toggle_fsm_selection"
                                                type="object"
                                                t-att-class="record.is_selected_in_fsm.raw_value ? 'btn btn-danger btn-sm' : 'btn btn-primary btn-sm'"
                                                t-att-string="record.is_selected_in_fsm.raw_value ? 'Remove' : 'Add'"
                                                context="{'fsm_order_id': context.get('fsm_order_id')}"/> -->
                                        <button name="action_open_add_product_wizard"
                                            type="object"
                                            class="btn btn-primary btn-sm"
                                            string="Add"
                                            context="{'fsm_order_id': context.get('fsm_order_id')}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div t-if="record.default_code.value">
                                        <strong>Code:</strong> <field name="default_code"/>
                                    </div>
                                    <div>
                                        <strong>Price:</strong> <field name="list_price" widget="monetary"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <!-- Additional info can go here -->
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge badge-success" 
                                              t-if="record.is_selected_in_fsm.raw_value">
                                            âœ“ Selected
                                        </span>
                                        <span class="badge badge-secondary" 
                                              t-if="!record.is_selected_in_fsm.raw_value">
                                            Available
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Tree view for FSM product selection -->
    <record id="product_tree_fsm_selection" model="ir.ui.view">
        <field name="name">product.product.tree.fsm.selection</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree string="Products" create="true" edit="true">
                <field name="name"/>
                <field name="default_code"/>
                <field name="list_price"/>
                <field name="is_selected_in_fsm" string="Selected"/>
                <button name="toggle_fsm_selection"
                        type="object"
                        string="Toggle Selection"
                        class="btn-link"
                        context="{'fsm_order_id': context.get('fsm_order_id')}"/>
            </tree>
        </field>
    </record>
</odoo>