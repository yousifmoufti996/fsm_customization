<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view for reply actions -->
    <record id="fsm_reply_action_tree_view" model="ir.ui.view">
        <field name="name">fsm.reply.action.tree</field>
        <field name="model">fsm.reply.action</field>
        <field name="arch" type="xml">
            <tree string="Reply Actions" editable="top">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="color" widget="color_picker"/>
                <field name="active"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Form view for reply actions -->
    <record id="fsm_reply_action_form_view" model="ir.ui.view">
        <field name="name">fsm.reply.action.form</field>
        <field name="model">fsm.reply.action</field>
        <field name="arch" type="xml">
            <form string="Reply Action">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Enter description for this action..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for reply actions -->
    <record id="fsm_reply_action_search_view" model="ir.ui.view">
        <field name="name">fsm.reply.action.search</field>
        <field name="model">fsm.reply.action</field>
        <field name="arch" type="xml">
            <search string="Reply Actions">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for reply actions -->
    <record id="fsm_reply_action_action" model="ir.actions.act_window">
        <field name="name">Reply Actions</field>
        <field name="res_model">fsm.reply.action</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first reply action!
            </p>
            <p>
                Reply actions help categorize and organize the different types of responses
                that can be added to FSM orders. Create actions like "From Helpdesk", 
                "Customer Feedback", "Technical Note", etc.
            </p>
        </field>
    </record>

    <!-- Menu item for reply actions -->
    <menuitem id="fsm_reply_action_menu"
              name="Reply Actions"
              parent="fieldservice.config"
              action="fsm_reply_action_action"
              sequence="50"/>
</odoo>