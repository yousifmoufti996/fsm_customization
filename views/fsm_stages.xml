                    <field name="can_cancel" invisible="1"/>
                </xpath>
            </field>
        </record>

         -->

        <!-- Inherit FSM Order Form View to Add Stage Buttons -->
        <record id="fsm_order_form_stage_buttons" model="ir.ui.view">
            <field name="name">fsm.order.form.stage.buttons</field>
            <field name="model">fsm.order</field>
            <field name="inherit_id" ref="fieldservice.fsm_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    
                    <!-- On The Way Button -->
                    <button name="action_set_on_the_way" 
                            string="في الطريق" 
                            type="object" 
                            class="btn-primary"
                            invisible="is_closed or stage_id.name == 'في الطريق'"/>
                    
                    <!-- Work in Progress Button -->
                    <button name="action_set_work_in_progress" 
                            string="جاري العمل" 
                            type="object" 
                            class="btn-warning"
                            invisible=" stage_id.name == 'جاري العمل'"/>
                    <!-- not can_start_work or -->
                    <!-- Postponed Button -->
                    <button name="action_set_postponed" 
                            string="مؤجل" 
                            type="object" 
                            class="btn-secondary"
                            invisible="is_closed or stage_id.name == 'مؤجل'"/>
                    
                    <!-- Marketing Follow-up Button -->
                    <button name="action_set_marketing_followup" 
                            string="متابعة التسويق" 
                            type="object" 
                            class="btn-info"
                            invisible="stage_id.name == 'متابعة التسويق'"/>

                    <!-- Sales Follow-up Button -->
                    <button name="action_set_sales_followup" 
                            string="متابعة المبيعات" 
                            type="object" 
                            class="btn-info"
                            invisible="stage_id.name == 'متابعة المبيعات'"/>

                    <!-- Waiting Button -->
                    <button name="action_set_waiting" 
                            string="في الانتظار" 
                            type="object" 
                            class="btn-light"
                            invisible="stage_id.name == 'في الانتظار'"/>
                    
                    <!-- Cancelled Button -->
                    <button name="action_set_cancelled" 
                            string="ملغي" 
                            type="object" 
                            class="btn-danger"
                            invisible="stage_id.name == 'Cancelled' or 'ملغي'"
                            confirm="هل أنت متأكد من إلغاء هذا الطلب؟"/>
                    
                    <!-- Completion Request Button -->
                    <button name="action_set_completion_request" 
                            string="طلب اتمام العمل" 
                            type="object" 
                            class="btn-primary"
                            invisible="stage_id.name == 'طلب اتمام العمل'"/>
                    
                    <!-- Work Completed Button -->
                    <button name="action_set_work_completed" 
                            string="تم العمل" 
                            type="object" 
                            class="btn-success"
                            invisible=" stage_id.name == 'تم العمل'"
                            confirm="هل تم إنجاز العمل بالفعل؟"/>
                    
                    <!-- Audited Button -->
                    <button name="action_set_audited" 
                            string="تم التدقيق" 
                            type="object" 
                            class="btn-success"
                            invisible="stage_id.name == 'تم التدقيق'"
                            confirm="هل تم التدقيق على العمل؟"/>
                    
                    <!-- Emergency Stop Button -->
                    <button name="action_set_emergency_stop" 
                            string="توقف طارئ" 
                            type="object" 
                            class="btn-danger"
                            invisible="stage_id.name == 'توقف طارئ'"
                            confirm="هل تريد إيقاف هذا الطلب بشكل طارئ؟"/>
                    
                </xpath>
            </field>
        </record>

    </data>
</odoo>