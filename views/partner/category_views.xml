<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Partner Category Tree View -->
        <record id="partner_category_tree_view" model="ir.ui.view">
            <field name="name">partner.category.tree</field>
            <field name="model">partner.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Partner Category Form View -->
        <record id="partner_category_form_view" model="ir.ui.view">
            <field name="name">partner.category.form</field>
            <field name="model">partner.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" 
                                    type="object" 
                                    name="action_view_partners"
                                    icon="fa-users">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="partner_count"/>
                                    </span>
                                    <span class="o_stat_text">Partners</span>
                                </div>
                            </button>
                        </div>
                        
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                            
                                invisible='active == True'/>
                        
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                                <field name="color" widget="color"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="description" placeholder="Add a description for this category..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Partner Category Search View -->
        <record id="partner_category_search_view" model="ir.ui.view">
            <field name="name">partner.category.search</field>
            <field name="model">partner.category</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active','=',True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Active" name="group_active" domain="[]" context="{'group_by':'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Partner Category Action -->
        <record id="action_partner_category" model="ir.actions.act_window">
            <field name="name">Partner Categories</field>
            <field name="res_model">partner.category</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="partner_category_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new partner category
                </p>
                <p>
                    Partner categories help you organize your contacts into groups
                    like Blacklist, Whitelist, VIP customers, etc.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_partner_category"
                  name="Partner Categories"
                  parent="contacts.res_partner_menu_config"
                  action="action_partner_category"
                  sequence="10"/>

    </data>
</odoo>