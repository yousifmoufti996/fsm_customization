<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Problem Type Views -->
    <record id="view_problem_type_tree" model="ir.ui.view">
        <field name="name">problem.type.tree</field>
        <field name="model">problem.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="estimated_duration"/>

                <field name="description"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_problem_type_form" model="ir.ui.view">
        <field name="name">problem.type.form</field>
        <field name="model">problem.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="estimated_duration"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Available Solutions" name="solutions">
                            <field name="solution_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Problem Solution Views -->
    <record id="view_problem_solution_tree" model="ir.ui.view">
        <field name="name">problem.solution.tree</field>
        <field name="model">problem.solution</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="problem_type_id"/>
                <field name="description"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_problem_solution_form" model="ir.ui.view">
        <field name="name">problem.solution.form</field>
        <field name="model">problem.solution</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="problem_type_id"/>
                        <field name="sequence"/>
                        <field name="description"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_problem_type" model="ir.actions.act_window">
        <field name="name">Problem Types</field>
        <field name="res_model">problem.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_problem_solution" model="ir.actions.act_window">
        <field name="name">Problem Solutions</field>
        <field name="res_model">problem.solution</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_problem_management" 
              name="Problem Management" 
              parent="fieldservice.config" 
              sequence="50"/>
              
    <menuitem id="menu_problem_type" 
              name="Problem Types" 
              parent="menu_problem_management" 
              action="action_problem_type" 
              sequence="10"/>
              
    <menuitem id="menu_problem_solution" 
              name="Problem Solutions" 
              parent="menu_problem_management" 
              action="action_problem_solution" 
              sequence="20"/>
</odoo>