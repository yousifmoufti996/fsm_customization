            <xpath expr="//field[@name='menu_type_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//notebook" position="before"> 
                <group string="تفاصيل الخدمة" col="2">
                    <group string="تفاصيل الخدمة" >
                        <field name="menu_type_ids" string="مجموع عملاء فرعية" widget="many2many_tags" readonly="0"/>
                        <field name="category_id" string="نوع الاشتراك" widget="many2many_tags"/>
